                                       Text="1"
                                       VerticalAlignment="Center"
                                       Foreground="#0E8AA4">
                            </TextBlock>

                            <Line x:Name="FirstLine" 
                                  X2="40"
                                  Margin="5"
                                  Grid.Column="0"
                                  Stroke="White"
                                  StrokeThickness="1" 
                                  VerticalAlignment="Center">
                            </Line>

                            <Line x:Name="SecondLine" 
                                  X2="40"
                                  Margin="5"
                                  Grid.Column="2"
                                  Stroke="White" 
                                  StrokeThickness="1" 
                                  VerticalAlignment="Center">
                            </Line>
                        </Grid>

                        <Grid x:Name="NumberOfHouse2"
                              Background="SkyBlue"
                              Width="100"
                              Height="20"
                              Canvas.Left="120"
                              Canvas.Top="0">
