<Window x:Class="ArrayHouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayHouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="*" MinWidth="200" MaxWidth="300"/>
            <ColumnDefinition 
                Width="4*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter 
            Width="5" 
            Background="#DEF0F5"/>

        <Border
            Grid.Column="0"
            Margin="0 0 10 0"
            CornerRadius="0 10 0 0"
            Background="#ADD8E6" BorderBrush="#ADD8E6">
            <StackPanel>
                <Border
                    Margin="10"
                    CornerRadius="0 10 0 0"
                    Background="#DEF0F5" BorderBrush="SkyBlue" BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                            <TextBlock
                                Margin="5"
                                Text="New ArrayHouse"/>
                        </Border>

                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="1" 
                            Margin="5 10 5 0"
                            Text="Houses:"/>

                        <TextBox
                            x:Name="NumberOfHouses"
                            Grid.Column="2"
                            Grid.Row="1"
                            Margin="5 10 5 0"
                            BorderBrush="SkyBlue" BorderThickness="1"/>

                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="2"
                            Margin="5 10 5 10"
                            Text="Days:"/>

                        <TextBox
                            Grid.Column="2"
                            Grid.Row="2"
                            Margin="5 10 5 10"
                            BorderBrush="SkyBlue" BorderThickness="1" Text=""/>

                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="3"
                            Margin="5 5 5 10"
                            Text="Days:"/>

                        <Button
                            Grid.Column="1"></Button>

                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <Border
            Grid.Column="1"
            Margin="5 0 10 0"
            BorderThickness="1" BorderBrush="#DEF0F5" CornerRadius="10 0 0 0"
            Background="#DEF0F5">

            <StackPanel>
                <Border
                    Margin="10"
                    BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                    <TextBlock
                        Margin="5"
                        Text="New ArrayHouse"/>
                </Border>
                <StackPanel Orientation="Horizontal">


                    <Grid Height="100" Width="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
                            <Line
                            X2="15"
                            VerticalAlignment="Center" 
                            Margin="5" 
                            Stroke="SkyBlue" StrokeThickness="1"/>
                            <TextBlock
                            Text="11" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            FontSize="16"/>
                            <Line
                            X2="15"
                            VerticalAlignment="Center" 
                            Margin="5" 
                            Stroke="SkyBlue" StrokeThickness="1"/>
                        </StackPanel>

                        <!--<Image Grid.Row="1" Source="./Resources/Images/Houses/House.png"></Image>-->


                    </Grid>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

                    <Grid x:Name="grdChampions" HorizontalAlignment="Left" VerticalAlignment="Top">

                        <ItemsControl x:Name="ArrayHouses">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Path=HouseType}" />
                                            <TextBlock Text="{Binding Path=Number}" />
                                            <TextBlock Text="{Binding Path=Test}" />

                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </ScrollViewer>

                <Button Width="100" Height="20" Click="Button_Click"></Button>


            </StackPanel>

        </Border>



        <!--<Image Width="100" x:Name="Image" Source="./Resources/Images/Houses/House.png"></Image>-->




    </Grid>
</Window>
