                                       Text="2"
                                       Foreground="#0E8AA4">
                            </TextBlock>

                            <Line x:Name="FirstLine2" 
                                  X2="40"
                                  Margin="5"
                                  Grid.Column="0"
                                  Stroke="White"
                                  StrokeThickness="1" 
                                  VerticalAlignment="Center">
                            </Line>

                            <Line x:Name="SecondLine2" 
                                  X2="40"
                                  Margin="5"
                                  Grid.Column="2"
                                  Stroke="White" 
                                  StrokeThickness="1" 
                                  VerticalAlignment="Center">
                            </Line>
                        </Grid>

                        <Grid x:Name="NumberOsdfDays"
                              Background="SkyBlue"
                              Width="20"
                              Height="80"
                              Canvas.Left="0"
                              Canvas.Top="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock HorizontalAlignment="Center"
                                       Grid.Row="1"
                                       Text="1"
                                       Foreground="#0E8AA4">
                            </TextBlock>

                            <Line 
                                  Y2="40"
                                  Margin="5"
                                  Grid.Row="0"
                                  Stroke="White"
                                  StrokeThickness="1" 
                                  HorizontalAlignment="Center">
                            </Line>

                            <Line 
                                  Y2="40"
                                  Margin="5"
                                  Grid.Row="2"
                                  Stroke="White" 
                                  StrokeThickness="1" 
                                  HorizontalAlignment="Center">
                            </Line>
                        </Grid>

                        <Grid x:Name="NumberOfDays2"
                              Background="SkyBlue"
                              Width="20"
                              Height="80"
                              Canvas.Left="0"
                              Canvas.Top="100">
