<Window x:Class="ArrayHouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayHouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="*" MinWidth="200" MaxWidth="300"/>
            <ColumnDefinition 
                Width="4*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter 
            Width="5" 
            Background="#DEF0F5"/>

        <Border
            Grid.Column="0"
            Margin="0 0 10 0"
            CornerRadius="0 10 0 0"
            Background="#ADD8E6" BorderBrush="#ADD8E6">
            <StackPanel>
                <Border
                    Margin="0 10 10 0"
                    CornerRadius="0 10 10 0"
                    Background="#DEF0F5" BorderBrush="SkyBlue" BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                            <TextBlock
                                Margin="10 5"
                                Text="New ArrayHouse"/>
                        </Border>

                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="1" 
                            Margin="10 10 5 0"
                            Text="Houses:"/>

                        <TextBox
                            x:Name="NumberOfHouses"
                            Grid.Column="2"
                            Grid.Row="1"
                            Margin="5 10 5 0"
                            BorderBrush="SkyBlue" BorderThickness="1"/>

                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="2"
                            Margin="10 10 5 10"
                            Text="Days:"/>

                        <TextBox
                            x:Name="Days"
                            Grid.Column="2"
                            Grid.Row="2"
                            Margin="5 10 5 10"
                            BorderBrush="SkyBlue" BorderThickness="1" Text=""/>
                    </Grid>
                </Border>

                <Border
                    Margin="0 10 10 0"
                    CornerRadius="0 10 10 0"
                    Background="#DEF0F5" BorderBrush="SkyBlue" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                            <TextBlock 
                                Margin="10 5"
                                Text="Default Type of Houses"/>
                        </Border>

                        <RadioButton
                            x:Name="DefaultHouseTypeIsActive"
                            IsChecked="True"
                            Grid.Row="1"
                            Margin="20 10 0 0"
                            Background="SkyBlue"
                            Content="Аctive"/>

                        <RadioButton
                            x:Name="DefaultHouseTypeIsInactive"
                            Grid.ColumnSpan="2"
                            Grid.Row="2"
                            Margin="20 10 5 10"
                            Background="SkyBlue"
                            Content="Inactive"/>
                        
                    </Grid>
                </Border>

                <Button
                    x:Name="CreateButton"
                    Style="{StaticResource CreateButton}"
                    Margin="0 10 10 0"
                    FontSize="14"
                    Content="Create"
                    Click="CreateNewArrayHouse"/>
            </StackPanel>
        </Border>

        <Border
            Grid.Column="1"
            Margin="5 0 10 0"
            BorderThickness="1" BorderBrush="#DEF0F5" CornerRadius="10 0 0 0"
            Background="#DEF0F5">

            <StackPanel>
                <Border
                    Margin="10"
                    BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                    <TextBlock
                        Margin="5"
                        Text="New ArrayHouse"/>
                </Border>
                
                <!--<StackPanel Orientation="Horizontal">


                    <Grid Height="100" Width="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
                            <Line
                            X2="15"
                            VerticalAlignment="Center" 
                            Margin="5" 
                            Stroke="SkyBlue" StrokeThickness="1"/>
                            <TextBlock
                            Text="11" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            FontSize="16"/>
                            <Line
                            X2="15"
                            VerticalAlignment="Center" 
                            Margin="5" 
                            Stroke="SkyBlue" StrokeThickness="1"/>
                        </StackPanel>

                    </Grid>
                </StackPanel>-->


                <ScrollViewer
                        VerticalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Visible"
                        Height="120"
                        Margin="10 0"
                        Background="#ADD8E6">

                    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

                        <ItemsControl x:Name="ArrayHouses">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!--Numbers of house-->
                                        <StackPanel
                                            Grid.Row="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                            <Line
                                                X2="30"
                                                VerticalAlignment="Center"
                                                Margin="2 5"
                                                Stroke="Black" StrokeThickness="1"/>

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Path=Number}"/>

                                            <Line
                                                X2="30"
                                                VerticalAlignment="Center"
                                                Margin="2 5"
                                                Stroke="Black" StrokeThickness="1"/>
                                        </StackPanel>

                                        <!--House Img-->
                                        <Image Margin="1" Grid.Row="1" Source="{Binding Path=UrlPicture, Mode=TwoWay}"></Image>

                                        <Button CommandParameter="{Binding Path=Number}" x:Name="changeButton" Margin="1" Grid.Row="2" Click="ChangeHouseType">Change</Button>

                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </ScrollViewer>


                <Button Width="100" Height="50" Click="Button_Click"></Button>

                
                
                <ScrollViewer
                        VerticalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Visible"
                        Height="120"
                        Margin="10 0"
                        Background="#ADD8E6">

                    <ListView ItemsSource="{Binding Matrix}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock Text="{Binding Day}"/>

                                    <ListView ItemsSource="{Binding ArrayHouse}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    
                                                    <TextBlock Foreground="Blue" Text="{Binding Number}"/>

                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                </ScrollViewer>





            </StackPanel>

        </Border>



        <!--<Image Width="100" x:Name="Image" Source="./Resources/Images/Houses/House.png"></Image>-->




    </Grid>
</Window>
