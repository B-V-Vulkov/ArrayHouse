                    Background="#ADD8E6" BorderBrush="#ADD8E6"
                    CornerRadius="10 0 0 10" BorderThickness="1">

                        <StackPanel 
                        Orientation="Horizontal" 
                        Margin="10">

                            <Button
                            x:Name="ExecuteButton"
                            Style="{StaticResource ExecutionButton}"
                            Width="120"
                            Margin="0 0 30 0"
                            FontSize="14"
                            Content="Execute"
                            Click="Execute"/>

                            <Button
                            x:Name="ResetButtonr"
                            Style="{StaticResource ExecutionButton}"
                            Width="120"
                            Margin="0 0 30 0"
                            FontSize="14"
                            Content="Reset"
                            Click="Reset"/>

                        </StackPanel>

                    </Border>

                    <Border
                    Margin="10 10 0 0"
                    BorderBrush="SkyBlue" BorderThickness="0 0 0 1">
                        <TextBlock
                        Margin="5"
                        Text="Playground"/>
                    </Border>

                </StackPanel>

                <ScrollViewer x:Name="PlaygroundScrollViewer"
                              Grid.Row="1"
                              Margin="10 10 0 0"
                              VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Visible"
                              Background="#ADD8E6">

                    <Canvas Width="800" HorizontalAlignment="Left">

                        <Rectangle Width="20" Height="20" Fill="SkyBlue"></Rectangle>

                        <Grid x:Name="NumberOfHouse"
                              Background="SkyBlue"
                              Width="100"
                              Height="20"
                              Canvas.Left="20"
                              Canvas.Top="0">
